@model ST10339549_CLDV6212_POE.Models.Product

@{
    ViewBag.Title = "Edit Product";
}

<div class="container">
    <h2>Edit Product</h2>

    <form asp-action="Edit" method="post">
        <!-- Include a hidden field for Product ID to identify the product -->
        <input type="hidden" asp-for="RowKey" />

        <div class="form-group">
            <label>Product Name</label>
            <input type="text" asp-for="ProductName" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Product Description</label>
            <input type="text" asp-for="ProductDescription" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Product Price</label>
            <input type="number" asp-for="ProductPrice" class="form-control" step="0.01" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
