@model ST10339549_CLDV6212_POE.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container">
    <h2>Delete Product</h2>

    <h3>Are you sure you want to delete this product?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Product Name</dt>
            <dd class="col-sm-10">@Model.ProductName</dd>
            <dt class="col-sm-2">Product Description</dt>
            <dd class="col-sm-10">@Model.ProductDescription</dd>
            <dt class="col-sm-2">Product Price</dt>
            <dd class="col-sm-10">@Model.ProductPrice</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RowKey" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
