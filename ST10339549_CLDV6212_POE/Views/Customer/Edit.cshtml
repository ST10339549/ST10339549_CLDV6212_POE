@model ST10339549_CLDV6212_POE.Models.Customer

@{
    ViewBag.Title = "Edit Customer";
}

<div class="container">
    <h2>Edit Customer</h2>

    <form asp-action="Edit" method="post">
        <!-- Include a hidden field for Customer ID to identify the customer -->
        <input type="hidden" asp-for="RowKey" />

        <div class="form-group">
            <label>Customer Name</label>
            <input type="text" asp-for="CustomerName" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Customer Surname</label>
            <input type="text" asp-for="CustomerSurname" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Customer Email</label>
            <input type="email" asp-for="CustomerEmail" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Customer Address</label>
            <input type="text" asp-for="CustomerAddress" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
