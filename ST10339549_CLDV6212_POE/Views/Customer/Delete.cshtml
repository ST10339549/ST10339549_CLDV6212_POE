@model ST10339549_CLDV6212_POE.Models.Customer

@{
    ViewBag.Title = "Delete Customer";
}

<div class="container">
    <h2>Delete Customer</h2>

    <h3>Are you sure you want to delete this customer?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Customer Name</dt>
            <dd class="col-sm-10">@Model.CustomerName</dd>
            <dt class="col-sm-2">Customer Surname</dt>
            <dd class="col-sm-10">@Model.CustomerSurname</dd>
            <dt class="col-sm-2">Customer Email</dt>
            <dd class="col-sm-10">@Model.CustomerEmail</dd>
            <dt class="col-sm-2">Customer Address</dt>
            <dd class="col-sm-10">@Model.CustomerAddress</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RowKey" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
