@model List<string>

@{
    ViewBag.Title = "Order Processing";
}

<h2>Order Processing</h2>

<form asp-action="OrderProcessing" method="post">
    <div class="form-group">
        <label for="order">Add New Order:</label>
        <input type="text" name="order" id="order" class="form-control" placeholder="Enter order details" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Order</button>
</form>

<hr />

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Order Details</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message</td>
                    <td>
                        <button class="btn btn-primary">View</button>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-4">No orders found in the queue.</div>
}