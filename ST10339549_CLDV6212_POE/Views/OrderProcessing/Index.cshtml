@model List<ST10339549_CLDV6212_POE.Services.OrderMessage>

@{
    ViewBag.Title = "Order Processing";
}

<h2>Order Processing</h2>

<form asp-action="OrderProcessing" method="post">
    <div class="form-group">
        <label for="orderId">Order ID:</label>
        <input type="text" name="orderId" id="orderId" class="form-control" placeholder="Enter order ID" required />
    </div>
    <div class="form-group">
        <label for="productId">Product ID:</label>
        <input type="text" name="productId" id="productId" class="form-control" placeholder="Enter product ID" required />
    </div>
    <div class="form-group">
        <label for="quantity">Quantity:</label>
        <input type="number" name="quantity" id="quantity" class="form-control" placeholder="Enter quantity" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Order</button>
</form>

<hr />

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Product ID</th>
                <th>Quantity</th>
                <th>Action</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.OrderId</td>
                    <td>@message.ProductId</td>
                    <td>@message.Quantity</td>
                    <td>@message.Action</td>
                    <td>@message.Timestamp</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-4">No orders found in the queue.</div>
}
