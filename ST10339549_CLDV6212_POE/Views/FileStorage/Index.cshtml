@model List<string>

@{
    ViewBag.Title = "Contracts Management";
}

<div class="container">
    <h2 class="my-4 text-center">Contracts Management</h2>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Upload New Contract</h5>
            <form asp-action="Upload" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="formFile">Select File:</label>
                    <input type="file" name="formFile" class="form-control-file" required />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Upload</button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Uploaded Contracts</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Contract Name</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model)
                        {
                            <tr>
                                <td>@System.IO.Path.GetFileName(file)</td>
                                <td class="text-center">
                                    <a href="@file" class="btn btn-success btn-sm" target="_blank">
                                        Download
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No contracts uploaded yet.</div>
            }
        </div>
    </div>
</div>